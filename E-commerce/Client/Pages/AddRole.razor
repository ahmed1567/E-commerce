@page "/role"
<h3>Add Role</h3>

<EditForm Model="@Manager" OnValidSubmit="@HandleValidSubmit">
    <FluentValidationValidator />

    <div class="form-group" >
    <label> Role </label>
    <InputSelect class="form-select" @bind-Value="Manager.IsManager">           
            <option  value="True">New Manager</option>
            <option  value="false">New Admin</option>
    </InputSelect>

    </div>
    <div class="form-group">
        <label>Name</label>
        <InputText class="form-control"  @bind-Value="Manager.Name" />
        <ValidationMessage For="@(()=>Manager.Name)" />

    </div>    

    <div class="form-group">
        <label>Email</label>
        <InputText class="form-control"  @bind-Value="Manager.Email" />
        <ValidationMessage For="@(()=>Manager.Email)" />

    </div>    


    <div class="form-group">
        <label>Address</label>
        <InputText class="form-control"  @bind-Value="Manager.Address" />
        <ValidationMessage For="@(()=>Manager.Address)" />

    </div>      

    <div class="form-group">
        <label>Mobile</label>
        <InputText class="form-control"  @bind-Value="Manager.Mobile" />
        <ValidationMessage For="@(()=>Manager.Mobile)" />
    </div>    

    <div class="form-group">
        <label>Password</label>
        <InputText class="form-control"  @bind-Value="Manager.Password" />
        <ValidationMessage For="@(()=>Manager.Password)" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</EditForm>
