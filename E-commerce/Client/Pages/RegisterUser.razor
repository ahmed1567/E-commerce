@page "/register"
<h3>Vendor Register</h3>

<EditForm Model="@User" OnValidSubmit="@HandleValidSubmit">
    <FluentValidationValidator />
    <div class="form-group">
        <label>Name</label>
        <InputText class="form-control"  @bind-Value="User.Name" />
        <ValidationMessage For="@(()=>User.Name)" />

    </div>    

    <div class="form-group">
        <label>Email</label>
        <InputText class="form-control"  @bind-Value="User.Email" />
        <ValidationMessage For="@(()=>User.Email)" />

    </div>    


    <div class="form-group">
        <label>Address</label>
        <InputText class="form-control"  @bind-Value="User.Address" />
        <ValidationMessage For="@(()=>User.Address)" />

    </div>      

    <div class="form-group">
        <label>Mobile</label>
        <InputText class="form-control"  @bind-Value="User.Mobile" />
        <ValidationMessage For="@(()=>User.Mobile)" />
    </div>    

    <div class="form-group">
        <label>Password</label>
        <InputText class="form-control"  @bind-Value="User.Password" />
        <ValidationMessage For="@(()=>User.Password)" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</EditForm>





