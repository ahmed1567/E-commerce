@page "/vendor"
<h3>RegisterUser</h3>

<EditForm Model="@Vendor" OnValidSubmit="@HandleValidSubmit">
    <FluentValidationValidator />
    <div class="form-group">
        <label>Name</label>
        <InputText class="form-control"  @bind-Value="Vendor.Name" />
        <ValidationMessage For="@(()=>Vendor.Name)" />

    </div>    

    <div class="form-group">
        <label>Email</label>
        <InputText class="form-control"  @bind-Value="Vendor.Email" />
        <ValidationMessage For="@(()=>Vendor.Email)" />

    </div>        
    
    <div class="form-group">
        <label>TaxNumber</label>
        <InputText class="form-control"  @bind-Value="Vendor.TaxNumber" />
        <ValidationMessage For="@(()=>Vendor.TaxNumber)" />

    </div>    


    <div class="form-group">
        <label>Address</label>
        <InputText class="form-control"  @bind-Value="Vendor.Address" />
        <ValidationMessage For="@(()=>Vendor.Address)" />

    </div>      

    <div class="form-group">
        <label>Mobile</label>
        <InputText class="form-control"  @bind-Value="Vendor.Mobile" />
        <ValidationMessage For="@(()=>Vendor.Mobile)" />
    </div>    

    <div class="form-group">
        <label>Password</label>
        <InputText class="form-control"  @bind-Value="Vendor.Password" />
        <ValidationMessage For="@(()=>Vendor.Password)" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</EditForm>
